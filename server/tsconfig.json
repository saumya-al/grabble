{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./"
    },
    "include": [
        "./**/*.ts",
        "../src/types.ts",
        "../src/game-state-manager.ts",
        "../src/game-engine.ts",
        "../src/word-detection.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}